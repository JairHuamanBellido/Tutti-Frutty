{
    "compilerOptions": {
      "sourceMap": true,
      "noImplicitAny": false,
      "module": "commonjs",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "target": "es6",
      "lib": [
        "es2015",
        "es2017",
        "dom"
      ],
      "removeComments": true,
      "allowSyntheticDefaultImports": true,
      "jsx": "react",
      "allowJs": true,
      "baseUrl": "./",
      "paths": {
        "components/*": [
          "./src/*"
        ],
      }
    },
    "exclude": ["node_modules"]
  }